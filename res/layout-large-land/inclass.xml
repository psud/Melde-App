<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
         android:background="#c4f3ff" >
     >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        
        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="185dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true" >

                <LinearLayout
                    android:id="@+id/llayoutRightNormal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="4 " >

                    <Button
                        android:id="@+id/bRundeDran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#34495e"
                        android:text="Runde Dran"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />

                    <Button
                        android:id="@+id/bDran"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#e74c3c"
                        android:text="nur Dran"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />

                    <Button
                        android:id="@+id/bGemeldet"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#f1c40f"
                        android:text="Gemeldet"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />

                    <Button
                        android:id="@+id/bMeldDran"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#27ae60"
                        android:text="Gemeldet + Dran"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lLayoutRightBewertung"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="5 " >

                    <Button
                        android:id="@+id/bAfSkip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#2980b9"
                        android:text="Ãœberspringen"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />

                    <Button
                        android:id="@+id/bAfFrage"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#34495e"
                        android:text="Frage"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />

                    <Button
                        android:id="@+id/bAfSchlecht"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#e74c3c"
                        android:text="Schlecht"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />

                    <Button
                        android:id="@+id/bAfOk"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#f1c40f"
                        android:text="Okay"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />

                    <Button
                        android:id="@+id/bAfGut"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#27ae60"
                        android:text="Gut"
                        android:textColor="#ffffff"
                        android:textSize="18.5dp" />
                </LinearLayout>
            </FrameLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="25dp"
                android:src="@drawable/circlemiddle" />
        </RelativeLayout>
    </FrameLayout>
    
    <!-- DRAWER  -->
    <LinearLayout
            android:id="@+id/llLeftBoxes"
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:weightSum="4" 
            android:layout_gravity="start">

            <DigitalClock
                android:id="@+id/digClock"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#2980b9"
                android:gravity="center"
                android:text="12:00"
                android:textColor="#ffffff"
                android:textSize="45dp" />

            <Button
                android:id="@+id/bFertig"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/fertigbutton"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="18.5dp" />

            <Button
                android:id="@+id/bEinstellungen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/settingsbutton"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="18.5dp" />

            <Button
                android:id="@+id/bHaAufschreiben"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/haschreibbutton"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18.5dp" />
        </LinearLayout>
    

</android.support.v4.widget.DrawerLayout>